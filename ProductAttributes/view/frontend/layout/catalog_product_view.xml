<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content">
        <container name="product.quality" htmlClass="product-quality" htmlTag="div" after="-">
            <block class="Magento\Cms\Block\Block" name="myPromo" after="product.info.details">
                <arguments>
                    <argument name="block_id" xsi:type="string">custom_cms_block</argument>
                </arguments>
            </block>
        </container>
        <container name="product.att" htmlTag="div" htmlClass="product-attr" after="product.quality">
            <block class="Magento\Framework\View\Element\Template" name="ConfigProduct.Att" template="RightpointAssignment_ProductAttributes::nutrationvalue.phtml" after="myPromo">
                <arguments>
                    <argument name="view_model" xsi:type="object">RightpointAssignment\ProductAttributes\ViewModel\Value</argument>
                </arguments>
            </block>
        </container>
    </referenceContainer>
</page>
